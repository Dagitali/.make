### Git ###

[color]
	ui = true
[core]
	excludesfile = $HOME/.gitignore
[credential]
	helper = $GIT_CREDENTIAL_HELPER
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[init]
	defaultBranch = main
[rerere]
	enabled = true
[user]
	name = $GIT_USER_NAME
	email = $GIT_USER_EMAIL

### GitFlow ###

[gitflow "branch"]
    master = main
    develop = develop
[gitflow "prefix"]
	feature = feature/
	release = release/
	hotfix = hotfix/
	bugfix = bugfix/
	support = support/
	versiontag = v
